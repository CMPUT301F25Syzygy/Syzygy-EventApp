<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit Event"
            android:textColor="#5A5CE1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Event Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="John Doe's Super Cool Event"
            android:inputType="text"
            android:backgroundTint="#CCCCCC"
            android:drawableEnd="@drawable/ic_edit"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fun family festivities!"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:backgroundTint="#CCCCCC"
            android:drawableEnd="@drawable/ic_edit"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Event Poster -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Poster"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/edit_poster"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginBottom="12dp"
            android:background="#F2F2F2"
            android:contentDescription="Event Poster"
            android:scaleType="centerInside"
            android:src="@drawable/image_placeholder" />

        <!-- Upload & Delete Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#007BFF"
                android:text="Upload"
                android:textColor="#FFFFFF"
                app:icon="@drawable/upload_arrow" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#DC3545"
                android:text="Delete"
                android:textColor="#FFFFFF"
                app:icon="@drawable/delete" />
        </LinearLayout>

        <!-- Location -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="10800 97 Ave, NW, Edmonton"
            android:inputType="textPostalAddress"
            android:backgroundTint="#CCCCCC"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_edit"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Date & Time -->
        <TextView
            android:id="@+id/EditDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Date"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starts"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Oct 25, 2025"
                android:backgroundTint="#EAF0FF"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5:00 PM"
                android:backgroundTint="#EAF0FF"
                android:textColor="#000" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ends"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Oct 25, 2025"
                android:backgroundTint="#EAF0FF"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8:00 PM"
                android:backgroundTint="#EAF0FF"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Waiting Lists -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting List"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Accepted (Clickable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvAcceptedLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ACCEPTED"
                android:background="#E8F5E9"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/accepted_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E8F5E9"
                android:text="0"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Hidden ListView for compatibility -->
        <ListView
            android:id="@+id/listAccepted"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Rejected/Cancelled (Clickable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/RejectedLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REJECTED"
                android:background="#FFEBEE"
                android:textColor="#C62828"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/rejected_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFEBEE"
                android:text="0"
                android:textColor="#C62828"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Hidden ListView for compatibility -->
        <ListView
            android:id="@+id/listRejected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Cancelled (Clickable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/CancelledLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCELLED"
                android:background="#F5F5F5"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/cancelled_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F5F5F5"
                android:text="0"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Hidden ListView for compatibility -->
        <ListView
            android:id="@+id/listCancelled"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Pending (Clickable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvPendingLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PENDING"
                android:background="#FFF8E1"
                android:textColor="#F9A825"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/pending_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8E1"
                android:text="0"
                android:textColor="#F9A825"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Hidden ListView for compatibility -->
        <ListView
            android:id="@+id/listPending"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Waiting (Clickable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/WaitingLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WAITING"
                android:background="#E3F2FD"
                android:textColor="#1565C0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/Waiting_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E3F2FD"
                android:text="0"
                android:textColor="#1565C0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Hidden ListView for compatibility -->
        <ListView
            android:id="@+id/listWaiting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Max Entrants row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/MaxEntrantsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max. Attendees"
                android:background="#F5F5F5"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/max_entrants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="100"
                android:inputType="number"
                android:background="#F5F5F5"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Max Waiting List row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/MaxWaitingListLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max. Waiting List"
                android:background="#F5F5F5"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/max_waiting_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Unlimited"
                android:inputType="number"
                android:background="#F5F5F5"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Generate QR Code Button -->
        <Button
            android:id="@+id/generate_qr_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Generate QR Code"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:drawableStart="@android:drawable/ic_menu_gallery"
            android:drawablePadding="8dp" />

        <!-- Geolocation Required Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Require Geolocation"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/geolocation_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Action buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <Button
                android:id="@+id/create_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF"
                android:text="Create" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#DC3545"
                android:textColor="#FFFFFF"
                android:text="Cancel" />

            <Button
                android:id="@+id/update_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF"
                android:text="Update" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#DC3545"
                android:textColor="#FFFFFF"
                android:text="Delete" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>