<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="2dp"
            android:background="@drawable/field_box_background"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/colorForeground"/>

            <TextView
                android:id="@+id/header_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perform various administrative actions within the app."
                android:textSize="14sp"
                android:textColor="?android:attr/colorForeground"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Admin Action Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Profiles Button -->
            <LinearLayout
                android:id="@+id/profile_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/field_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/outline_profile_24"
                    app:tint="?android:attr/colorForeground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Profiles"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Events Button -->
            <LinearLayout
                android:id="@+id/event_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/field_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/outline_event_24"
                    app:tint="?android:attr/colorForeground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Events"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Images Button -->
            <LinearLayout
                android:id="@+id/image_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/field_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_images"
                    app:tint="?android:attr/colorForeground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Images"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Notifications Button -->
            <LinearLayout
                android:id="@+id/notification_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/field_box_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_notifications"
                    app:tint="?android:attr/colorForeground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Notifications"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="16sp" />
            </LinearLayout>

        </GridLayout>


    </LinearLayout>
</ScrollView>