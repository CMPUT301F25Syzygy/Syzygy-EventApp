<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Name -->
        <TextView
            android:id="@+id/event_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/event_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event description goes here..."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/field_box_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/open_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Map"
                android:textSize="14sp"
                android:backgroundTint="#5059D5" />
        </LinearLayout>

        <!-- Waiting List Count -->
        <TextView
            android:id="@+id/waiting_list_count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting List: 0 entrants"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:background="#E6E6E6"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:visibility="visible" />

        <!-- Max Attendees (Lottery Criteria) -->
        <TextView
            android:id="@+id/max_attendees_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum Attendees: 50"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Registration Period -->
        <TextView
            android:id="@+id/registration_period_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Period"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Join Waiting List Button -->
        <Button
            android:id="@+id/join_waiting_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Waiting List"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#5059D5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Leave Waiting List Button -->
        <Button
            android:id="@+id/leave_waiting_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Waiting List"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#D55050"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>