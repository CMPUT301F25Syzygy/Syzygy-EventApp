<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="2dp"
            android:background="@drawable/field_box_background"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Profile Administration"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/colorForeground"/>

            <TextView
                android:id="@+id/header_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap on a profile to perform actions on it."
                android:textSize="14sp"
                android:textColor="?android:attr/colorForeground"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <com.example.syzygy_eventapp.UserListView
            android:id="@+id/user_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</LinearLayout>