<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- main content here -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navBar" />

    <!-- Bottom Nav Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:weightSum="5">

        <!-- profile -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="TODO"
                android:src="@drawable/outline_profile_24"
                app:tint="#545454" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="37dp"
                android:layout_height="36dp"
                android:src="@drawable/outline_search_24"
                app:tint="#545454" />

        </LinearLayout>

        <!-- flag -->
        <LinearLayout
            android:id="@+id/nav_qr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="37dp"
                android:src="@drawable/outline_event_24"
                app:tint="#545454" />

        </LinearLayout>

        <!-- clipboard -->
        <LinearLayout
            android:id="@+id/nav_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:src="@drawable/outline_organize_24"
                app:tint="#545454" />

        </LinearLayout>

        <!-- people -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_admin_24"
                app:tint="#545454" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
